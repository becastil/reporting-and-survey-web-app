# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/survey_platform_dev"

# Optional: Redis Configuration (for caching)
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Authentication (Clerk) - Get keys from https://clerk.com
# Server-side publishable key (same value as NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY)
CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"
# Client-exposed publishable key (safe for browser)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"
# Server secret key (never expose to client)
CLERK_SECRET_KEY="sk_test_your_secret_here"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Demo Mode - Intended for local development only (do NOT enable in production)
DEMO_MODE="false"
SKIP_AUTH="false"
ENABLE_DEMO_MODE="false"
# Client demo flags (bypass client-side auth/UI in dev)
NEXT_PUBLIC_DEMO_MODE="false"
NEXT_PUBLIC_SKIP_AUTH="false"
NEXT_PUBLIC_ENABLE_DEMO_MODE="false"
# Escape hatch for local builds only (non-production)
SKIP_ENV_VALIDATION="false"

# Feature Flags
ENABLE_DEMO_MODE="false"
ENABLE_PERFORMANCE_BADGES="true"
ENABLE_PEER_COMPARISON="true"

# Email (Resend)
RESEND_API_KEY=""
EMAIL_FROM="onboarding@resend.dev"
EMAIL_REPLY_TO="support@example.com"

# Monitoring (Sentry)
NEXT_PUBLIC_SENTRY_DSN=""

# AWS S3 (optional; used if configured)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="survey-platform-uploads-dev"

# Demo analytics (optional)
NEXT_PUBLIC_DEMO_ANALYTICS_ENDPOINT=""
