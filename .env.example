# Database Configuration
# PostgreSQL (Neon serverless recommended for production)
DATABASE_URL="postgresql://user:password@localhost:5432/survey_platform_dev"
# Production example: postgresql://user:password@ep-example.us-east-1.aws.neon.tech/survey_platform?sslmode=require

# Redis Configuration (Upstash recommended for production)
# Local Redis
REDIS_URL="redis://localhost:6379"
# Upstash Redis (Production)
# REDIS_URL="rediss://default:YOUR_PASSWORD@us1-example.upstash.io:6379"
UPSTASH_REDIS_REST_URL="https://us1-example.upstash.io"
UPSTASH_REDIS_REST_TOKEN="YOUR_REST_TOKEN"

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Production: https://survey-platform.vercel.app

# API Configuration
API_SECRET_KEY="generate-a-secure-random-string-here"
JWT_SECRET="another-secure-random-string"

# Performance Monitoring (Optional but recommended)
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Feature Flags
ENABLE_DEMO_MODE="true"
ENABLE_PERFORMANCE_BADGES="true"
ENABLE_PEER_COMPARISON="true"

# Environment
NODE_ENV="development"
# Options: development, test, production

# Vercel-specific (auto-populated in Vercel environment)
# VERCEL_URL
# VERCEL_ENV
# VERCEL_REGION